<style>
    .marketing-pillars {
        padding: 6rem 0;
        background: var(--bg-dark);
        position: relative;
        overflow: hidden;
    }

    /* Background Accent (optional) */
    .marketing-pillars::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 50% 0%,
            rgba(56, 189, 248, 0.05) 0%,
            transparent 50%
        );
        pointer-events: none;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
        position: relative;
        z-index: 1;
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .section-label {
        display: inline-block;
        color: var(--primary);
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
    }

    .section-title {
        font-size: 2.25rem;
        font-weight: 700;
        color: var(--text-white);
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .section-description {
        font-size: 1.25rem;
        color: var(--text-muted);
        line-height: 1.6;
        font-weight: 500;
    }

    .pillars-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .pillar-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 1rem;
        padding: 2.5rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }

    .pillar-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(56, 189, 248, 0.2);
        transform: translateY(-5px);
        box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5);
    }

    .pillar-card.highlight {
        background: linear-gradient(
            135deg,
            rgba(56, 189, 248, 0.1) 0%,
            rgba(14, 165, 233, 0.05) 100%
        );
        border-color: rgba(56, 189, 248, 0.3);
    }

    .pillar-card.full-width {
        grid-column: 1 / -1;
        text-align: center;
        align-items: center;
    }

    .pillar-card.full-width .pillar-content {
        max-width: 700px;
    }

    .pillar-number {
        font-size: 4rem;
        font-weight: 800;
        color: rgba(255, 255, 255, 0.03);
        position: absolute;
        top: 1rem;
        right: 1.5rem;
        line-height: 1;
        pointer-events: none;
    }

    .pillar-card:hover .pillar-number {
        color: rgba(255, 255, 255, 0.06);
    }

    .pillar-card h3 {
        font-size: 1.5rem;
        color: var(--text-white);
        margin-bottom: 0.5rem;
        font-weight: 700;
    }

    .pillar-subtitle {
        color: var(--primary);
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .pillar-card p {
        color: var(--text-muted);
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
        flex-grow: 1;
    }

    .pillar-angle {
        font-size: 0.875rem;
        color: var(--text-white);
        background: rgba(255, 255, 255, 0.05);
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        border-left: 3px solid var(--primary);
        margin-top: auto;
        font-style: italic;
    }

    .emotional-undercurrent {
        background: linear-gradient(
            180deg,
            rgba(15, 23, 42, 0.5) 0%,
            rgba(15, 23, 42, 1) 100%
        );
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 1.5rem;
        padding: 3rem;
        text-align: center;
    }

    .emotional-undercurrent h3 {
        font-size: 1.75rem;
        color: var(--text-white);
        margin-bottom: 2rem;
    }

    .undercurrent-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .uc-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .uc-icon {
        font-size: 2rem;
    }

    .uc-item p {
        color: var(--text-gray);
        font-weight: 500;
    }

    .distillation {
        font-size: 1.5rem;
        color: var(--text-white);
        max-width: 900px;
        margin: 0 auto;
        font-weight: 700;
        line-height: 1.4;
    }

    @media (max-width: 768px) {
        .section-title {
            font-size: 1.75rem;
        }

        .pillars-grid {
            grid-template-columns: 1fr;
        }

        .pillar-number {
            font-size: 3rem;
        }

        .emotional-undercurrent {
            padding: 2rem 1.5rem;
        }
    }
</style>
