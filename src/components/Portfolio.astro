---
const projects = [
  {
    category: "Professional Services",
    title: "Risk Management Services",
    description:
      "Complete digital transformation for iptalons.com with new website, SEO, PPC, and social media campaigns driving significant business growth.",
    metrics: [
      { value: "340%", label: "Sales Increase" },
      { value: "4.2x", label: "ROAS" },
      { value: "#1", label: "Google Rankings" },
    ],
    // High-tech dashboard grid pattern
    gradient: `
      radial-gradient(circle at 50% 50%, rgba(99, 102, 241, 0.1) 0%, rgba(15, 23, 42, 0.4) 100%),
      linear-gradient(0deg, rgba(15, 23, 42, 0.9), rgba(15, 23, 42, 0.8)),
      repeating-linear-gradient(45deg, rgba(99, 102, 241, 0.1) 0px, rgba(99, 102, 241, 0.1) 1px, transparent 1px, transparent 10px),
      linear-gradient(135deg, #1e1b4b 0%, #312e81 100%)
    `,
  },
  {
    category: "Real Estate",
    title: "Home Developer",
    description:
      "Full-service marketing for Theprairiesmithville.com including website redesign, local SEO, social media, and display ads resulted in massive growth.",
    metrics: [
      { value: "11x", label: "Viewership" },
      { value: "50%", label: "More Leads" },
    ],
    gradient: "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
    image: "/images/home-developer.png",
  },
  {
    category: "Professional Services",
    title: "Law Firm Marketing",
    description:
      "Comprehensive strategy for fullmanfirm.com with new website, SEO, Google Ads, and content marketing to dominate local search.",
    metrics: [
      { value: "35%", label: "Lead Growth" },
      { value: "-40%", label: "Lower CPL" },
      { value: "75%", label: "AIO Visibility" },
    ],
    gradient: "linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)",
    image: "/images/law-firm-professional.jpg",
  },
];
---

<section id="portfolio" class="portfolio">
  <div class="container">
    <div class="stats-banner">
      <div class="stat-box">
        <span class="stat-big">259%</span>
        <span class="stat-text">Marketing AI Adoption</span>
      </div>
      <div class="stat-box">
        <span class="stat-big">158%</span>
        <span class="stat-text">ROAS Improvement</span>
      </div>
      <div class="stat-box">
        <span class="stat-big">72%</span>
        <span class="stat-text">Cost Reduction</span>
      </div>
    </div>

    <div class="section-header">
      <span class="section-label">Case Studies</span>
      <h2 class="section-title">Real Results from Real Businesses</h2>
      <p class="section-description">
        See how our complete marketing solutions have transformed businesses
        across industries
      </p>
    </div>
    <div class="portfolio-grid">
      {
        projects.map((project) => (
          <div class="portfolio-card">
            <div
              class="portfolio-image"
              style={
                project.image
                  ? `background: url(${project.image}) center/cover, ${project.gradient}`
                  : `background: ${project.gradient}`
              }
            >
              <div class="portfolio-overlay">
                <span class="portfolio-category">{project.category}</span>
              </div>
            </div>
            <div class="portfolio-content">
              <h3 class="portfolio-title">{project.title}</h3>
              <p class="portfolio-description">{project.description}</p>
              <div class="portfolio-metrics">
                {project.metrics.map((metric) => (
                  <div class="metric">
                    <span class="metric-value">{metric.value}</span>
                    <span class="metric-label">{metric.label}</span>
                  </div>
                ))}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<script>
  // Portfolio Card 3D Hover Effect
  const portfolioCards = document.querySelectorAll(".portfolio-card");

  portfolioCards.forEach((card) => {
    card.addEventListener("mousemove", (e) => {
      const rect = card.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;

      const centerX = rect.width / 2;
      const centerY = rect.height / 2;

      const rotateX = (y - centerY) / 20;
      const rotateY = (centerX - x) / 20;

      (card as HTMLElement).style.transform =
        `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateY(-5px)`;
    });

    card.addEventListener("mouseleave", () => {
      (card as HTMLElement).style.transform =
        "perspective(1000px) rotateX(0) rotateY(0) translateY(0)";
    });
  });
</script>

<style>
  .portfolio {
    background: var(--bg-dark);
  }

  .stats-banner {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
    padding: 3rem;
    background: linear-gradient(
      135deg,
      rgba(99, 102, 241, 0.1) 0%,
      rgba(139, 92, 246, 0.1) 100%
    );
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: 20px;
  }

  .stat-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 1.5rem;
  }

  .stat-big {
    font-size: 3rem;
    font-weight: 900;
    background: var(--gradient-1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-text {
    color: var(--text-secondary);
    font-size: 0.95rem;
    font-weight: 600;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .portfolio-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .portfolio-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    border-color: var(--primary-color);
  }

  .portfolio-image {
    height: 250px;
    position: relative;
    overflow: hidden;
  }

  .portfolio-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .portfolio-category {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    color: white;
    font-weight: 600;
    font-size: 0.9rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .portfolio-content {
    padding: 2rem;
  }

  .portfolio-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .portfolio-description {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.7;
  }

  .portfolio-metrics {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 12px;
    border: 1px solid var(--border-color);
  }

  .metric {
    flex: 1;
    text-align: center;
  }

  .metric-value {
    display: block;
    font-size: 1.8rem;
    font-weight: 800;
    background: var(--gradient-1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.25rem;
  }

  .metric-label {
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .portfolio-link {
    color: var(--primary-light);
    text-decoration: none;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    transition: all 0.3s ease;
  }

  .portfolio-link:hover {
    color: var(--primary-color);
    transform: translateX(5px);
  }

  @media (max-width: 1024px) {
    .portfolio-grid {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .portfolio-grid {
      grid-template-columns: 1fr;
    }

    .portfolio-metrics {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
