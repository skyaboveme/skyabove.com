<script>
  // GA4 Event Tracking
  function trackEvent(eventName: string, params = {}) {
    if (typeof gtag !== 'undefined') {
      gtag('event', eventName, params);
    }
  }

  // Track page view
  trackEvent('page_view', {
    page_title: 'Homepage - Package Selector',
    page_location: window.location.href
  });

  // Form submission
  const form = document.getElementById('contactForm');
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();

      const formData = new FormData(form as HTMLFormElement);
      const packageChoice = formData.get('package');

      trackEvent('generate_lead', {
        event_category: 'Form',
        event_label: 'Homepage Contact Form',
        package_interest: packageChoice
      });

      alert('Thank you! We\'ll be in touch within 24 hours to discuss your needs.');
      form.reset();
    });
  }

  // Track package link clicks
  document.querySelectorAll('a[href="/startup-package"], a[href="/ai-makeover"]').forEach(link => {
    link.addEventListener('click', (e) => {
      const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
      const packageType = href === '/startup-package' ? 'Startup' : 'AI Makeover';

      trackEvent('package_view_intent', {
        event_category: 'Navigation',
        event_label: packageType,
        link_location: 'Homepage'
      });
    });
  });

  // Track phone clicks
  document.querySelectorAll('a[href^="tel:"]').forEach(link => {
    link.addEventListener('click', () => {
      trackEvent('phone_click', {
        event_category: 'Contact',
        event_label: 'Homepage Phone Click'
      });
    });
  });
</script>
