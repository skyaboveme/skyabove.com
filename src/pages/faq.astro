        <!-- Technical Questions -->
        <div class="faq-category">
          <h3 class="category-title">Technical Questions</h3>

          <div class="faq-item">
            <button class="faq-question">
              <span>Do I own my website and all accounts?</span>
              <svg
                class="faq-icon"
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
