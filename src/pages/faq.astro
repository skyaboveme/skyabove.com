      } else if (
        lowerQuestion.includes("team") ||
        lowerQuestion.includes("who") ||
        lowerQuestion.includes("experience")
      ) {
        return knowledgeBase["team"];
      } else if (
        lowerQuestion.includes("industry") ||
        lowerQuestion.includes("industries") ||
        lowerQuestion.includes("work with")
      ) {
        return knowledgeBase["industries"];
      } else if (
        lowerQuestion.includes("guarantee") ||
        lowerQuestion.includes("promise") ||
        lowerQuestion.includes("assure")
      ) {
        return knowledgeBase["guarantee"];
      } else if (
        lowerQuestion.includes("cancel") ||
        lowerQuestion.includes("commitment") ||
        lowerQuestion.includes("contract")
      ) {
        return knowledgeBase["cancel"];
      } else if (
        lowerQuestion.includes("fee") ||
        lowerQuestion.includes("additional") ||
        lowerQuestion.includes("extra cost") ||
        lowerQuestion.includes("hidden") ||
        lowerQuestion.includes("other cost")
      ) {
        return knowledgeBase["fees"];
      } else {
        return `Great question! While I can answer general questions about our services, pricing, and process, I'd recommend browsing the FAQ below or contacting us directly at (951) 760-0896 or hello@skyabove.com for specific questions. We're happy to help!`;
      }
    }

    function addMessage(content: string, isUser: boolean = false) {
      if (!chatMessages) return;

      const messageDiv = document.createElement("div");
      messageDiv.className = `message ${isUser ? "user-message" : "bot-message"}`;

      const avatarDiv = document.createElement("div");
      avatarDiv.className = "message-avatar";
      avatarDiv.innerHTML = isUser
        ? '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>'
        : '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>';

      const contentDiv = document.createElement("div");
      contentDiv.className = "message-content";

      const p = document.createElement("p");
      p.textContent = content;
      contentDiv.appendChild(p);

      if (isUser) {
        messageDiv.appendChild(contentDiv);
        messageDiv.appendChild(avatarDiv);
      } else {
        messageDiv.appendChild(avatarDiv);
        messageDiv.appendChild(contentDiv);
      }

      chatMessages.appendChild(messageDiv);
      chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    function handleQuestion(question: string) {
      if (!question.trim()) return;

      // Add user message
      addMessage(question, true);

      // Disable input temporarily
      if (chatInput) chatInput.disabled = true;
      const sendBtn = chatForm?.querySelector(
        ".chatbot-send-btn",
      ) as HTMLButtonElement;
      if (sendBtn) sendBtn.disabled = true;

      // Simulate thinking delay
      setTimeout(() => {
        const response = getAIResponse(question);
        addMessage(response, false);

        // Re-enable input
        if (chatInput) {
          chatInput.disabled = false;
          chatInput.value = "";
          chatInput.focus();
        }
        if (sendBtn) sendBtn.disabled = false;
      }, 800);
    }

    // Handle form submission
    chatForm?.addEventListener("submit", (e) => {
      e.preventDefault();
      if (chatInput) {
        handleQuestion(chatInput.value);
      }
    });

    // Handle quick questions
    quickQuestions.forEach((btn) => {
      btn.addEventListener("click", () => {
        const question = btn.getAttribute("data-question");
        if (question) {
          handleQuestion(question);
        }
      });
    });
  });
</script>
