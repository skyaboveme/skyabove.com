---
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";
import IndustryTabs from "../../components/IndustryTabs.astro";

const industry = {
    name: "Landscaping",
    title: "Transform Your Business from 'Mow & Blow' to High-End Design",
    subtitle:
        "Stop competing on price for weekly maintenance. Build a brand that attracts six-figure hardscaping projects and commercial contracts.",
    description:
        "Skyabove provides specialized AI marketing for Landscaping companies, helping you rank #1 for design/build services and secure lucrative commercial maintenance contracts.",
};

const painPoints = [
    {
        title: "Low Margins",
        description:
            "Tired of sweating for pennies on weekly mows? We shift your lead flow towards high-margin design and installation projects.",
        icon: "dollar-sign",
    },
    {
        title: "Seasonality",
        description:
            "Revenue dries up in winter? We implement year-round marketing strategies including snow removal contracts and holiday lighting.",
        icon: "calendar",
    },
    {
        title: "Equipment Costs",
        description:
            "Expensive equipment sitting idle? We generate enough volume to keep your crews and trucks moving every single day.",
        icon: "truck",
    },
];

const solutions = [
    {
        title: "Design/Build Leads",
        description:
            "We target homeowners looking for complete outdoor transformations—patios, kitchens, and pools—not just lawn mowing.",
        icon: "palmtree",
    },
    {
        title: "Commercial Contracts",
        description:
            "Secure steady, year-round cash flow with multi-year HOA and commercial property maintenance agreements.",
        icon: "briefcase",
    },
    {
        title: "Local SEO for Hardscaping",
        description:
            "Dominate the search results for 'paver patio installer', 'retaining wall', and 'landscape architect' in your specific service area.",
        icon: "map-pin",
    },
    {
        title: "Showcase Your Work",
        description:
            "We turn your portfolio into a lead generation engine, using high-quality visuals to sell your expertise before you even arrive.",
        icon: "image",
    },
];

const landscapingTabs = [
    {
        id: "websites",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>`,
        title: "Portfolio Websites",
        headline: "Websites That Sell the Dream",
        description:
            "Landscaping is visual. Your website needs to be a stunning gallery of your best work. We build fast, image-heavy sites that load instantly and inspire homeowners to request a consultation for their own backyard oasis.",
        image: "/images/landscaping-website.png",
    },
    {
        id: "seo",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" /></svg>`,
        title: "Local SEO",
        headline: "Own Your Neighborhoods",
        description:
            "You want jobs in the wealthy subdivisions, not 30 miles away. Our hyper-local SEO targets specific neighborhoods and communities, ensuring you dominate the search results where the big budgets live.",
        image: "/images/landscaping-dashboard.png",
    },
    {
        id: "ppc",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>`,
        title: "PPC for Big Jobs",
        headline: "Target High-Intent Projects",
        description:
            "We run Google Ads campaigns specifically for high-ticket keywords like 'outdoor kitchen installation', 'pool landscaping', and 'commercial landscape maintenance', filtering out the tire kickers looking for cheap mowing.",
        image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?auto=format&fit=crop&q=80&w=2000",
    },
    {
        id: "social",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11" /></svg>`,
        title: "Social Media Marketing",
        headline: "Inspiration Feed",
        description:
            "We manage your Instagram and Facebook to showcase before-and-after transformations, seasonal tips, and project highlights, keeping you top-of-mind for homeowners dreaming of their next project.",
        image: "/images/social-media-dashboard.png",
    },
];
---

<Layout
    title={`${industry.name} Marketing - Skyabove`}
    description={industry.description}
>
    <Navigation />

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-bg-overlay"></div>
        <div class="container relative z-10">
            <div class="hero-content">
                <span class="hero-label">By Landscapers, For Landscapers</span>
                <h1 class="page-title">
                    Transform Your Business with <span class="text-green-500"
                        >High-End Design</span
                    >
                </h1>
                <p class="page-subtitle">{industry.subtitle}</p>
                <div class="cta-wrapper">
                    <a href="/#contact" class="btn btn-primary"
                        >Grow Your Landscape Business</a
                    >
                    <span class="cta-note"
                        >Exclusive Territories Available - Check Yours</span
                    >
                </div>
            </div>
        </div>
    </section>

    <!-- The Problem Section -->
    <section class="problem-section">
        <div class="container">
            <div class="section-header text-center">
                <h2 class="section-title">Escape the Low-Margin Trap</h2>
                <p class="section-desc">
                    Why competing on price for weekly mowing is a dead end.
                </p>
            </div>
            <div class="pain-points-grid">
                {
                    painPoints.map((point) => (
                        <div class="pain-card">
                            <div class="pain-icon-wrapper">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class={`lucide lucide-${point.icon}`}
                                >
                                    <path d="M12 12h.01" />
                                </svg>
                            </div>
                            <h3>{point.title}</h3>
                            <p>{point.description}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- The Solution Section -->
    <section class="solution-section">
        <div class="container">
            <div class="section-header text-center">
                <span class="section-label">The Skyabove Blueprint</span>
                <h2 class="section-title">
                    Design, Build, & Commercial Growth
                </h2>
            </div>

            <div class="solutions-grid">
                {
                    solutions.map((solution) => (
                        <div class="solution-card">
                            <div class="solution-icon">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="lucide-check-circle"
                                >
                                    <>
                                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                                        <polyline points="22 4 12 14.01 9 11.01" />
                                    </>
                                </svg>
                            </div>
                            <div class="solution-content">
                                <h3>{solution.title}</h3>
                                <p>{solution.description}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <IndustryTabs tabs={landscapingTabs} />

    <section class="final-cta">
        <div class="container">
            <div class="cta-box">
                <h2>Ready to Scale Your Landscape Business?</h2>
                <p>Stop chasing $40 mows and start landing $40k projects.</p>
                <a href="/#contact" class="btn btn-primary btn-large"
                    >Book Your Strategy Session</a
                >
            </div>
        </div>
    </section>

    <Footer />
</Layout>

<style>
    /* Hero Section */
    .hero-section {
        position: relative;
        padding: 12rem 0 8rem;
        text-align: center;
        background: url("/images/landscaping-hero.png") no-repeat center
            center/cover;
        overflow: hidden;
    }

    .hero-bg-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            rgba(20, 83, 45, 0.75),
            #0f172a
        ); /* Green tint overlay */
        z-index: 1;
    }

    .relative {
        position: relative;
    }
    .z-10 {
        z-index: 10;
    }

    .hero-label {
        display: inline-block;
        background: rgba(22, 163, 74, 0.15); /* Green tint */
        color: #4ade80; /* Green-400 */
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        border: 1px solid rgba(22, 163, 74, 0.3);
    }

    .page-title {
        font-size: clamp(2.5rem, 5vw, 4.5rem);
        font-weight: 900;
        margin-bottom: 1.5rem;
        line-height: 1.1;
        color: white;
    }

    .text-green-500 {
        color: #22c55e;
    }

    .page-subtitle {
        font-size: 1.25rem;
        color: #cbd5e1;
        max-width: 800px;
        margin: 0 auto 3rem;
        line-height: 1.7;
    }

    .cta-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .cta-note {
        font-size: 0.85rem;
        color: #94a3b8;
        font-style: italic;
    }

    .btn {
        display: inline-block;
        padding: 1rem 2.5rem;
        border-radius: 0.5rem;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 1.1rem;
    }

    .btn-primary {
        background: linear-gradient(
            135deg,
            #15803d,
            #16a34a
        ); /* Green gradient */
        color: white;
        box-shadow: 0 4px 20px rgba(22, 163, 74, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(22, 163, 74, 0.5);
    }

    /* Problem Section */
    .problem-section {
        padding: 6rem 0;
        background: #0f172a;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1rem;
    }

    .section-desc {
        font-size: 1.1rem;
        color: #94a3b8;
        max-width: 600px;
        margin: 0 auto 4rem;
    }

    .pain-points-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .pain-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border-radius: 1rem;
        transition: transform 0.3s ease;
    }

    .pain-card:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.05);
    }

    .pain-icon-wrapper {
        width: 50px;
        height: 50px;
        background: rgba(239, 68, 68, 0.1); /* Red tint for pain */
        color: #f87171;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .pain-card h3 {
        color: white;
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
    }

    .pain-card p {
        color: #94a3b8;
        line-height: 1.6;
    }

    /* Solution Section */
    .solution-section {
        padding: 6rem 0;
        background: #1e293b;
    }

    .solutions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        margin-top: 4rem;
    }

    .solution-card {
        display: flex;
        gap: 1.5rem;
        padding: 2rem;
        background: rgba(15, 23, 42, 0.5);
        border-radius: 1rem;
        border: 1px solid rgba(22, 163, 74, 0.2);
    }

    .solution-icon {
        flex-shrink: 0;
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #15803d, #16a34a);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .solution-content h3 {
        color: white;
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        font-weight: 700;
    }

    .solution-content p {
        color: #cbd5e1;
        line-height: 1.6;
    }

    /* Final CTA */
    .final-cta {
        padding: 6rem 0;
        background: #0f172a;
    }

    .cta-box {
        background: radial-gradient(
            circle at center,
            #14532d 0%,
            #0f172a 100%
        ); /* Green radial */
        border: 1px solid #16a34a;
        padding: 4rem 2rem;
        border-radius: 2rem;
        text-align: center;
    }

    .cta-box h2 {
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1rem;
    }

    .cta-box p {
        font-size: 1.2rem;
        color: #cbd5e1;
        margin-bottom: 2.5rem;
    }

    .text-center {
        text-align: center;
    }
</style>
