---
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";
import IndustryTabs from "../../components/IndustryTabs.astro";

const industry = {
    name: "Construction",
    title: "Build Your Construction Empire",
    subtitle:
        "Win bigger bids, recruit top subcontractors, and showcase your landmark projects with AI-powered marketing for the construction industry.",
    description:
        "Skyabove helps general contractors and construction firms win high-value commercial and residential projects through targeted AI marketing strategies.",
};

const painPoints = [
    {
        title: "Feast or Famine",
        description:
            "Project pipeline drying up? We ensure you have a steady stream of bid invitations and qualified leads so your crews are never idle.",
        icon: "trending-down",
    },
    {
        title: "Low-Quality Leads",
        description:
            "Tired of tire kickers who can't afford you? We pre-qualify leads using AI, filtering out the small jobs so you can focus on the whales.",
        icon: "filter",
    },
    {
        title: "Recruiting Woes",
        description:
            "Can't find skilled labor? We run targeted recruitment campaigns to find the best subs, carpenters, and project managers in your area.",
        icon: "hard-hat",
    },
    {
        title: "Project Delays",
        description:
            "Okay, marketing can't fix weather delays. But we CAN fix communication delays by automating updates and client intake.",
        icon: "clock",
    },
];

const solutions = [
    {
        title: "Big Bid Wins",
        description:
            "We help you package your proposals with professional design and case studies that prove your capability to handle multi-million dollar projects.",
        icon: "award",
    },
    {
        title: "Project Showcases",
        description:
            "Your work speaks for itself - if people see it. We capture stunning drone footage and photography to turn your completed jobs into powerful sales assets.",
        icon: "camera",
    },
    {
        title: "Subcontractor Network",
        description:
            "Build a reliable bench of talent. We create a dedicated portal for subs to apply and get vetted, ensuring you're ready to scale when the big job lands.",
        icon: "users",
    },
    {
        title: "Local SEO dominance",
        description:
            "Rank #1 for 'General Contractor' and 'Commercial Construction' in your service area. Be the first call for developers and property owners.",
        icon: "map-pin",
    },
];

const constructionTabs = [
    {
        id: "websites",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>`,
        title: "Heavy-Duty Websites",
        headline: "Built Strong",
        description:
            "Your website needs to look as solid as your buildings. We design bold, industrial-themed sites that feature your equipment and capabilities front and center.",
        image: "/images/construction-website.png",
    },
    {
        id: "seo",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" /></svg>`,
        title: "Bid Tracking",
        headline: "Know Your Numbers",
        description:
            "Our custom dashboards track your win rate, lead sources, and project value, giving you the data you need to bid smarter and more profitably.",
        image: "/images/construction-dashboard.png",
    },
    {
        id: "ppc",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>`,
        title: "Project Ads",
        headline: "Show Off Your Work",
        description:
            "We run geo-targeted ads around your active job sites, showcasing your progress to neighbors and local businesses to generate referrals.",
        image: "https://images.unsplash.com/photo-1541888946425-d81bb19240f5?auto=format&fit=crop&q=80&w=2000",
    },
    {
        id: "content",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" /></svg>`,
        title: "Case Studies",
        headline: "Prove Your Competence",
        description:
            "We write detailed case studies of your past projects, highlighting challenges overcome and value delivered, building massive trust with future clients.",
        image: "https://images.unsplash.com/photo-1503387762-592deb58ef4e?auto=format&fit=crop&q=80&w=2000",
    },
];
---

<Layout
    title={`${industry.name} Marketing - Skyabove`}
    description={industry.description}
    serviceName="Construction Marketing Services"
    serviceDescription="AI-driven marketing for general contractors and construction firms to win high-value bids, recruit subcontractors, and showcase projects."
    keywords="construction marketing, contractor SEO, general contractor marketing, construction lead generation, construction bid marketing, subcontractor recruitment"
>
    <Navigation />

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-bg-overlay"></div>
        <div class="container relative z-10">
            <div class="hero-content">
                <span class="hero-label">Built for Builders</span>
                <h1 class="page-title">
                    Win the Projects <span class="text-orange-500"
                        >Define Your Legacy</span
                    >
                </h1>
                <p class="page-subtitle">{industry.subtitle}</p>
                <div class="cta-wrapper">
                    <a href="/#contact" class="btn btn-primary"
                        >Get More Bid Invites</a
                    >
                    <span class="cta-note"
                        >Exclusive Territories Available - Check Yours</span
                    >
                </div>
            </div>
        </div>
    </section>

    <!-- The Problem Section -->
    <section class="problem-section">
        <div class="container">
            <div class="section-header text-center">
                <h2 class="section-title">Stop Chasing Small Jobs</h2>
                <p class="section-desc">
                    Move from residential repairs to commercial contracts and
                    custom builds.
                </p>
            </div>
            <div class="pain-points-grid">
                {
                    painPoints.map((point) => (
                        <div class="pain-card">
                            <div class="pain-icon-wrapper">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class={`lucide lucide-${point.icon}`}
                                >
                                    <path d="M12 12h.01" />
                                </svg>
                            </div>
                            <h3>{point.title}</h3>
                            <p>{point.description}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- The Solution Section -->
    <section class="solution-section">
        <div class="container">
            <div class="section-header text-center">
                <span class="section-label">The Skyabove Blueprint</span>
                <h2 class="section-title">Strategy, Capability, & Growth</h2>
            </div>

            <div class="solutions-grid">
                {
                    solutions.map((solution) => (
                        <div class="solution-card">
                            <div class="solution-icon">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="lucide-check-circle"
                                >
                                    <>
                                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                                        <polyline points="22 4 12 14.01 9 11.01" />
                                    </>
                                </svg>
                            </div>
                            <div class="solution-content">
                                <h3>{solution.title}</h3>
                                <p>{solution.description}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <IndustryTabs tabs={constructionTabs} />

    <section class="final-cta">
        <div class="container">
            <div class="cta-box">
                <h2>Ready to Scale Your Construction Firm?</h2>
                <p>Stop bidding on scraps. Start building landmarks.</p>
                <a href="/#contact" class="btn btn-primary btn-large"
                    >Book Your Strategy Session</a
                >
            </div>
        </div>
    </section>

    <Footer />
</Layout>

<style>
    /* Hero Section */
    .hero-section {
        position: relative;
        padding: 12rem 0 8rem;
        text-align: center;
        background: url("/images/construction-hero.png") no-repeat center
            center/cover;
        overflow: hidden;
    }

    .hero-bg-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            rgba(124, 45, 18, 0.75),
            #0f172a
        ); /* Orange/Dark tint overlay */
        z-index: 1;
    }

    .relative {
        position: relative;
    }
    .z-10 {
        z-index: 10;
    }

    .hero-label {
        display: inline-block;
        background: rgba(234, 88, 12, 0.15); /* Orange tint */
        color: #fb923c; /* Orange-400 */
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        border: 1px solid rgba(234, 88, 12, 0.3);
    }

    .page-title {
        font-size: clamp(2.5rem, 5vw, 4.5rem);
        font-weight: 900;
        margin-bottom: 1.5rem;
        line-height: 1.1;
        color: white;
    }

    .text-orange-500 {
        color: #f97316;
    }

    .page-subtitle {
        font-size: 1.25rem;
        color: #cbd5e1;
        max-width: 800px;
        margin: 0 auto 3rem;
        line-height: 1.7;
    }

    .cta-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .cta-note {
        font-size: 0.85rem;
        color: #94a3b8;
        font-style: italic;
    }

    .btn {
        display: inline-block;
        padding: 1rem 2.5rem;
        border-radius: 0.5rem;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 1.1rem;
    }

    .btn-primary {
        background: linear-gradient(
            135deg,
            #c2410c,
            #ea580c
        ); /* Orange gradient */
        color: white;
        box-shadow: 0 4px 20px rgba(234, 88, 12, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(234, 88, 12, 0.5);
    }

    /* Problem Section */
    .problem-section {
        padding: 6rem 0;
        background: #0f172a;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1rem;
    }

    .section-desc {
        font-size: 1.1rem;
        color: #94a3b8;
        max-width: 600px;
        margin: 0 auto 4rem;
    }

    .pain-points-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .pain-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border-radius: 1rem;
        transition: transform 0.3s ease;
    }

    .pain-card:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.05);
    }

    .pain-icon-wrapper {
        width: 50px;
        height: 50px;
        background: rgba(239, 68, 68, 0.1); /* Red tint for pain */
        color: #f87171;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .pain-card h3 {
        color: white;
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
    }

    .pain-card p {
        color: #94a3b8;
        line-height: 1.6;
    }

    /* Solution Section */
    .solution-section {
        padding: 6rem 0;
        background: #1e293b;
    }

    .solutions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        margin-top: 4rem;
    }

    .solution-card {
        display: flex;
        gap: 1.5rem;
        padding: 2rem;
        background: rgba(15, 23, 42, 0.5);
        border-radius: 1rem;
        border: 1px solid rgba(234, 88, 12, 0.2);
    }

    .solution-icon {
        flex-shrink: 0;
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #c2410c, #ea580c);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .solution-content h3 {
        color: white;
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        font-weight: 700;
    }

    .solution-content p {
        color: #cbd5e1;
        line-height: 1.6;
    }

    /* Final CTA */
    .final-cta {
        padding: 6rem 0;
        background: #0f172a;
    }

    .cta-box {
        background: radial-gradient(
            circle at center,
            #7c2d12 0%,
            #0f172a 100%
        ); /* Orange/Dark radial */
        border: 1px solid #ea580c;
        padding: 4rem 2rem;
        border-radius: 2rem;
        text-align: center;
    }

    .cta-box h2 {
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1rem;
    }

    .cta-box p {
        font-size: 1.2rem;
        color: #cbd5e1;
        margin-bottom: 2.5rem;
    }

    .text-center {
        text-align: center;
    }
</style>
