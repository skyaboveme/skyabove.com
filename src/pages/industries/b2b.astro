---
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";
import IndustryTabs from "../../components/IndustryTabs.astro";

const industry = {
    name: "B2B",
    title: "AI Marketing for B2B Growth",
    subtitle:
        "Shorten sales cycles, fill your pipeline with qualified accounts, and align sales and marketing with our AI-driven Account-Based Marketing engine.",
    description:
        "Skyabove empowers B2B companies with AI-driven lead generation and account-based marketing, helping you target decision-makers and close bigger deals faster.",
};

const painPoints = [
    {
        title: "Long Sales Cycles",
        description:
            "Deals taking forever to close? We nurture leads automatically with personalized content, keeping your brand top-of-mind until they are ready to buy.",
        icon: "clock",
    },
    {
        title: "Empty Pipeline",
        description:
            "Sales team complaining about lead quality? We target decision-makers at your ideal accounts, delivering leads that are actually ready for a conversation.",
        icon: "filter",
    },
    {
        title: "Ghosting Prospects",
        description:
            "Tired of chasing prospects who went dark? Our AI follows up intelligently across multiple channels, re-engaging leads without burning them out.",
        icon: "ghost",
    },
    {
        title: "Marketing ROI",
        description:
            "Struggling to prove marketing's value? We track every touchpoint from first click to closed deal, showing you exactly which campaigns are driving revenue.",
        icon: "bar-chart-2",
    },
];

const solutions = [
    {
        title: "Account-Based Marketing",
        description:
            "We don't just cast a wide net. We identify your high-value target accounts and orchestrate personalized campaigns to penetrate specific companies.",
        icon: "target",
    },
    {
        title: "Lead Nurturing AI",
        description:
            "Our AI agents engage leads with relevant case studies, white papers, and insights, moving them through the funnel automatically.",
        icon: "message-square",
    },
    {
        title: "Sales Alignment",
        description:
            "We bridge the gap between sales and marketing, ensuring handoffs are seamless and both teams are working towards the same revenue goals.",
        icon: "users",
    },
    {
        title: "Thought Leadership",
        description:
            "Position your executives as industry experts. We create high-level content that builds trust and authority with C-suite decision-makers.",
        icon: "award",
    },
];

const b2bTabs = [
    {
        id: "websites",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>`,
        title: "SaaS & Tech Websites",
        headline: "Websites That Convert Demos",
        description:
            "Your website is your best salesperson. We build clean, high-performance sites optimized for conversionâ€”whether that's booking a demo, starting a free trial, or contacting sales.",
        image: "/images/b2b-website.png",
    },
    {
        id: "abm",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" /></svg>`,
        title: "Pipeline Analytics",
        headline: "Data-Driven Decisions",
        description:
            "Stop guessing what works. Our advanced dashboards show you deal velocity, account engagement scores, and attribution, so you can double down on the strategies that drive revenue.",
        image: "/images/b2b-dashboard.png",
    },
    {
        id: "linkedin",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>`,
        title: "LinkedIn Ads",
        headline: "Target Decision Makers",
        description:
            "Reach the C-suite where they hang out. We run hyper-targeted LinkedIn campaigns that put your message directly in front of the job titles and companies that matter most.",
        image: "https://images.unsplash.com/photo-1611162617474-5b21e879e113?auto=format&fit=crop&q=80&w=2000",
    },
    {
        id: "content",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" /></svg>`,
        title: "White Papers & Lead Magnets",
        headline: "Authority Content",
        description:
            "We produce high-value assets like white papers, industry reports, and webinars that attract qualified leads and establish your brand as the thought leader in your space.",
        image: "https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?auto=format&fit=crop&q=80&w=2000",
    },
];
---

<Layout
    title={`${industry.name} Marketing - Skyabove`}
    description={industry.description}
    serviceName="B2B Account-Based Marketing"
    serviceDescription="AI-powered lead generation and account-based marketing (ABM) for B2B tech and service companies to shorten sales cycles."
    keywords="B2B marketing agency, account based marketing, B2B lead generation, SaaS marketing, B2B SEO, enterprise marketing strategies"
>
    <Navigation />

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-bg-overlay"></div>
        <div class="container relative z-10">
            <div class="hero-content">
                <span class="hero-label">Enterprise-Grade Growth</span>
                <h1 class="page-title">
                    Fill Your Pipeline with <span class="text-blue-500"
                        >Qualified Deals</span
                    >
                </h1>
                <p class="page-subtitle">{industry.subtitle}</p>
                <div class="cta-wrapper">
                    <a href="/#contact" class="btn btn-primary"
                        >Start Account-Based Marketing</a
                    >
                    <span class="cta-note"
                        >Limited Agency Capacity - Apply Now</span
                    >
                </div>
            </div>
        </div>
    </section>

    <!-- The Problem Section -->
    <section class="problem-section">
        <div class="container">
            <div class="section-header text-center">
                <h2 class="section-title">Stop the "Feast or Famine" Cycle</h2>
                <p class="section-desc">
                    Is your sales team waiting for the phone to ring?
                </p>
            </div>
            <div class="pain-points-grid">
                {
                    painPoints.map((point) => (
                        <div class="pain-card">
                            <div class="pain-icon-wrapper">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class={`lucide lucide-${point.icon}`}
                                >
                                    <path d="M12 12h.01" />
                                </svg>
                            </div>
                            <h3>{point.title}</h3>
                            <p>{point.description}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- The Solution Section -->
    <section class="solution-section">
        <div class="container">
            <div class="section-header text-center">
                <span class="section-label">The Skyabove Method</span>
                <h2 class="section-title">Predictable Revenue & Growth</h2>
            </div>

            <div class="solutions-grid">
                {
                    solutions.map((solution) => (
                        <div class="solution-card">
                            <div class="solution-icon">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="lucide-check-circle"
                                >
                                    <>
                                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                                        <polyline points="22 4 12 14.01 9 11.01" />
                                    </>
                                </svg>
                            </div>
                            <div class="solution-content">
                                <h3>{solution.title}</h3>
                                <p>{solution.description}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <IndustryTabs tabs={b2bTabs} />

    <section class="final-cta">
        <div class="container">
            <div class="cta-box">
                <h2>Ready to Close Bigger Deals?</h2>
                <p>
                    Stop chasing bad leads. Start targeting your dream accounts.
                </p>
                <a href="/#contact" class="btn btn-primary btn-large"
                    >Book Your Strategy Session</a
                >
            </div>
        </div>
    </section>

    <Footer />
</Layout>

<style>
    /* Hero Section */
    .hero-section {
        position: relative;
        padding: 12rem 0 8rem;
        text-align: center;
        background: url("/images/b2b-hero.png") no-repeat center center/cover;
        overflow: hidden;
    }

    .hero-bg-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            rgba(30, 58, 138, 0.75),
            #0f172a
        ); /* Blue tint overlay */
        z-index: 1;
    }

    .relative {
        position: relative;
    }
    .z-10 {
        z-index: 10;
    }

    .hero-label {
        display: inline-block;
        background: rgba(37, 99, 235, 0.15); /* Blue tint */
        color: #60a5fa; /* Blue-400 */
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        border: 1px solid rgba(37, 99, 235, 0.3);
    }

    .page-title {
        font-size: clamp(2.5rem, 5vw, 4.5rem);
        font-weight: 900;
        margin-bottom: 1.5rem;
        line-height: 1.1;
        color: white;
    }

    .text-blue-500 {
        color: #3b82f6;
    }

    .page-subtitle {
        font-size: 1.25rem;
        color: #cbd5e1;
        max-width: 800px;
        margin: 0 auto 3rem;
        line-height: 1.7;
    }

    .cta-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .cta-note {
        font-size: 0.85rem;
        color: #94a3b8;
        font-style: italic;
    }

    .btn {
        display: inline-block;
        padding: 1rem 2.5rem;
        border-radius: 0.5rem;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 1.1rem;
    }

    .btn-primary {
        background: linear-gradient(
            135deg,
            #1d4ed8,
            #2563eb
        ); /* Blue gradient */
        color: white;
        box-shadow: 0 4px 20px rgba(37, 99, 235, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(37, 99, 235, 0.5);
    }

    /* Problem Section */
    .problem-section {
        padding: 6rem 0;
        background: #0f172a;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1rem;
    }

    .section-desc {
        font-size: 1.1rem;
        color: #94a3b8;
        max-width: 600px;
        margin: 0 auto 4rem;
    }

    .pain-points-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .pain-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border-radius: 1rem;
        transition: transform 0.3s ease;
    }

    .pain-card:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.05);
    }

    .pain-icon-wrapper {
        width: 50px;
        height: 50px;
        background: rgba(239, 68, 68, 0.1); /* Red tint for pain */
        color: #f87171;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .pain-card h3 {
        color: white;
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
    }

    .pain-card p {
        color: #94a3b8;
        line-height: 1.6;
    }

    /* Solution Section */
    .solution-section {
        padding: 6rem 0;
        background: #1e293b;
    }

    .solutions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        margin-top: 4rem;
    }

    .solution-card {
        display: flex;
        gap: 1.5rem;
        padding: 2rem;
        background: rgba(15, 23, 42, 0.5);
        border-radius: 1rem;
        border: 1px solid rgba(37, 99, 235, 0.2);
    }

    .solution-icon {
        flex-shrink: 0;
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #1d4ed8, #2563eb);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .solution-content h3 {
        color: white;
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        font-weight: 700;
    }

    .solution-content p {
        color: #cbd5e1;
        line-height: 1.6;
    }

    /* Final CTA */
    .final-cta {
        padding: 6rem 0;
        background: #0f172a;
    }

    .cta-box {
        background: radial-gradient(
            circle at center,
            #172554 0%,
            #0f172a 100%
        ); /* Blue/Dark radial */
        border: 1px solid #2563eb;
        padding: 4rem 2rem;
        border-radius: 2rem;
        text-align: center;
    }

    .cta-box h2 {
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1rem;
    }

    .cta-box p {
        font-size: 1.2rem;
        color: #cbd5e1;
        margin-bottom: 2.5rem;
    }

    .text-center {
        text-align: center;
    }
</style>
