---
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";
import IndustryTabs from "../../components/IndustryTabs.astro";

const industry = {
    name: "Real Estate",
    title: "Capture High-Intent Buyers & Sellers Automonously",
    subtitle:
        "Stop chasing Zillow leads. Build your own exclusive pipeline of qualified home buyers and sellers who are ready to move.",
    description:
        "Skyabove provides specialized AI marketing for Real Estate agents and brokerages, ensuring you dominate local search and automate lead follow-up.",
};

const painPoints = [
    {
        title: "The Portal Trap",
        description:
            "Tired of paying thousands to Zillow/Realtor.com for shared leads? Own your data.",
        icon: "home",
    },
    {
        title: "Speed to Lead",
        description:
            "If you don't answer in 5 minutes, you lose the deal. Our AI answers instantly.",
        icon: "clock",
    },
    {
        title: "Feast or Famine",
        description:
            "Inconsistent closings kill momentum. We build a predictable pipeline.",
        icon: "trending-down",
    },
];

const solutions = [
    {
        title: "Hyper-Local SEO",
        description:
            "Rank for 'Homes for sale in [Neighborhood]' and specific school districts.",
        icon: "map-pin",
    },
    {
        title: "Virtual Tour Ads",
        description:
            "Immersive social ads that showcase listings and drive qualified traffic.",
        icon: "video",
    },
    {
        title: "Seller Lead Nurture",
        description:
            "Automated value reports and market updates to convert homeowners into sellers.",
        icon: "mail",
    },
    {
        title: "Open House AI",
        description:
            "Automated sign-ups, follow-ups, and feedback collection for your events.",
        icon: "users",
    },
];

const realEstateTabs = [
    {
        id: "websites",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>`,
        title: "IDX Websites",
        headline: "High-Converting Real Estate Websites",
        description:
            "Your website should be your best agent. We build fast, mobile-responsive sites with integrated usage of IDX feeds, ensuring clients can search listings directly on your domain. Capture leads with intelligent property inquiries and home valuation tools.",
        image: "/images/real-estate-website-mockup.png",
    },
    {
        id: "seo",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" /></svg>`,
        title: "Local SEO",
        headline: "Dominate Neighborhood Search",
        description:
            "Be the first agent found in your target neighborhoods. Our SEO strategy targets hyper-local keywords like 'condos for sale in [Area]' and 'luxury homes in [City]', driving organic traffic from high-intent buyers and sellers.",
        image: "/images/seo-dashboard.png",
    },
    {
        id: "ppc",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>`,
        title: "PPC & Social Ads",
        headline: "Generate Leads on Demand",
        description:
            "Fill your pipeline instantly. We run targeted Google and Facebook ad campaigns that capture active buyers and sellers. From 'What's my home worth?' funnels to listing promotions, we deliver qualified leads directly to your CRM.",
        image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?auto=format&fit=crop&q=80&w=2000",
    },
    {
        id: "content",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>`,
        title: "Content Marketing",
        headline: "Market Authority Content",
        description:
            "Position yourself as the local expert. We create market reports, neighborhood guides, and buying/selling tips that build trust. Educational content nurtures leads until they are ready to transaction.",
        image: "https://images.unsplash.com/photo-1552664730-d307ca884978?auto=format&fit=crop&q=80&w=2000",
    },
    {
        id: "social",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11" /></svg>`,
        title: "Social Media",
        headline: "Visual Brand Building",
        description:
            "Real estate is visual. We manage your Instagram and Facebook presence with high-quality listing photos, video tours, and client testimonials. Stay top-of-mind with your sphere of influence.",
        image: "/images/social-media-dashboard.png",
    },
    {
        id: "analytics",
        icon: `<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>`,
        title: "Reporting",
        headline: "Pipeline Transparency",
        description:
            "Track every lead source. Our analytics dashboard shows you exactly which campaigns are generating showings and closings, allowing you to double down on what works.",
        image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?auto=format&fit=crop&q=80&w=2000",
    },
];
---

<Layout
    title={`${industry.name} Marketing - Skyabove`}
    description={industry.description}
>
    <Navigation />

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-bg-overlay"></div>
        <div class="container relative z-10">
            <div class="hero-content">
                <span class="hero-label">Exclusively for Real Estate Pros</span>
                <h1 class="page-title">
                    Dominate Your <span class="gradient-text">Local Market</span>
                </h1>
                <p class="page-subtitle">{industry.subtitle}</p>
                <div class="cta-wrapper">
                    <a href="/#contact" class="btn btn-primary"
                        >Build Your Pipeline</a
                    >
                    <span class="cta-note"
                        >Strategies for Residential, Commercial, and Luxury agents.</span
                    >
                </div>
            </div>
        </div>
    </section>

    <!-- The Trap (Problem) Section -->
    <section class="problem-section">
        <div class="container">
            <div class="section-header text-center">
                <h2 class="section-title">The "Shared Lead" Trap</h2>
                <p class="section-desc">
                    Why relying on Zillow and portals is a race to the bottom.
                </p>
            </div>
            <div class="pain-points-grid">
                {
                    painPoints.map((point) => (
                        <div class="pain-card">
                            <div class="pain-icon-wrapper">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class={`lucide lucide-${point.icon}`}
                                >
                                    {point.icon === 'home' && <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" /><polyline points="9 22 9 12 15 12 15 22" />}
                                    {point.icon === 'clock' && <circle cx="12" cy="12" r="10" /><polyline points="12 6 12 12 16 14" />}
                                    {point.icon === 'trending-down' && <polyline points="23 18 13.5 8.5 8.5 13.5 1 6" /><polyline points="17 18 23 18 23 12" />}
                                    
                                    <!-- Fallback generic circle if needed, but specific paths above -->
                                </svg>
                            </div>
                            <h3>{point.title}</h3>
                            <p>{point.description}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- The Solution Section -->
    <section class="solution-section">
        <div class="container">
            <div class="section-header text-center">
                <span class="section-label">The Skyabove System</span>
                <h2 class="section-title">
                    Closing Deals on Autopilot
                </h2>
            </div>

            <div class="solutions-grid">
                {
                    solutions.map((solution) => (
                        <div class="solution-card">
                            <div class="solution-icon">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="lucide-check-circle"
                                >
                                    <>
                                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                                        <polyline points="22 4 12 14.01 9 11.01" />
                                    </>
                                </svg>
                            </div>
                            <div class="solution-content">
                                <h3>{solution.title}</h3>
                                <p>{solution.description}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Customized Tabs -->
    <IndustryTabs tabs={realEstateTabs} />

    <section class="final-cta">
        <div class="container">
            <div class="cta-box">
                <h2>Ready to Scale Your GCI?</h2>
                <p>
                   Stop waiting for referrals. Build a predictable lead machine.
                </p>
                <a href="/#contact" class="btn btn-primary btn-large"
                    >Book Your Strategy Call</a
                >
            </div>
        </div>
    </section>

    <Footer />
</Layout>

<style>
    /* Hero Section */
    .hero-section {
        position: relative;
        padding: 12rem 0 8rem;
        text-align: center;
        background: url("https://images.unsplash.com/photo-1560518883-ce09059eeffa?q=80&w=2073")
            no-repeat center center/cover;
        overflow: hidden;
    }

    .hero-bg-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(15, 23, 42, 0.75), #0f172a);
        z-index: 1;
    }

    .relative {
        position: relative;
    }
    .z-10 {
        z-index: 10;
    }

    .hero-label {
        display: inline-block;
        background: rgba(20, 184, 166, 0.15);
        color: #5eead4;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        border: 1px solid rgba(20, 184, 166, 0.3);
    }

    .page-title {
        font-size: clamp(2.5rem, 5vw, 4.5rem);
        font-weight: 900;
        margin-bottom: 1.5rem;
        line-height: 1.1;
        color: white;
    }

    .gradient-text {
        background: linear-gradient(45deg, #14b8a6, #2dd4bf);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .page-subtitle {
        font-size: 1.25rem;
        color: #cbd5e1;
        max-width: 800px;
        margin: 0 auto 3rem;
        line-height: 1.7;
    }

    .cta-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .cta-note {
        font-size: 0.85rem;
        color: #94a3b8;
        font-style: italic;
    }

    .btn {
        display: inline-block;
        padding: 1rem 2.5rem;
        border-radius: 0.5rem;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 1.1rem;
    }

    .btn-primary {
        background: linear-gradient(45deg, #14b8a6, #2dd4bf);
        color: white;
        box-shadow: 0 4px 20px rgba(20, 184, 166, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(20, 184, 166, 0.5);
    }

    /* Problem Section */
    .problem-section {
        padding: 6rem 0;
        background: #0f172a;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1rem;
    }

    .section-desc {
        font-size: 1.1rem;
        color: #94a3b8;
        max-width: 600px;
        margin: 0 auto 4rem;
    }

    .pain-points-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .pain-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border-radius: 1rem;
        transition: transform 0.3s ease;
    }

    .pain-card:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.05);
    }

    .pain-icon-wrapper {
        width: 50px;
        height: 50px;
        background: rgba(239, 68, 68, 0.1);
        color: #f87171;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .pain-card h3 {
        color: white;
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
    }

    .pain-card p {
        color: #94a3b8;
        line-height: 1.6;
    }

    /* Solution Section */
    .solution-section {
        padding: 6rem 0;
        background: #1e293b;
    }

    .solutions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        margin-top: 4rem;
    }

    .solution-card {
        display: flex;
        gap: 1.5rem;
        padding: 2rem;
        background: rgba(15, 23, 42, 0.5);
        border-radius: 1rem;
        border: 1px solid rgba(20, 184, 166, 0.2);
    }

    .solution-icon {
        flex-shrink: 0;
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #14b8a6, #5eead4);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .solution-content h3 {
        color: white;
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        font-weight: 700;
    }

    .solution-content p {
        color: #cbd5e1;
        line-height: 1.6;
    }

    /* Final CTA */
    .final-cta {
        padding: 6rem 0;
        background: #0f172a;
    }

    .cta-box {
        background: radial-gradient(circle at center, #1e293b 0%, #0f172a 100%);
        border: 1px solid #14b8a6;
        padding: 4rem 2rem;
        border-radius: 2rem;
        text-align: center;
    }

    .cta-box h2 {
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1rem;
    }

    .cta-box p {
        font-size: 1.2rem;
        color: #cbd5e1;
        margin-bottom: 2.5rem;
    }

    .text-center {
        text-align: center;
    }
</style>
