---
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";
import IndustryTabs from "../../components/IndustryTabs.astro";

const industry = {
    name: "HVAC",
    title: "Dominate Your Local HVAC Market with AI-Driven Growth",
    subtitle:
        "Stop chasing shared leads. Build an exclusive, automated customer acquisition engine that works 24/7â€”just like your emergency service.",
    description:
        "Skyabove provides specialized AI marketing for HVAC companies, ensuring you rank #1 for emergency repairs and high-ticket installations.",
};

const painPoints = [
    {
        title: "The Seasonality Trap",
        description:
            "Feast in summer, famine in winter. We stabilize your revenue.",
        icon: "thermometer-snowflake",
    },
    {
        title: "Shared Lead Race",
        description:
            "Buying leads that 5 other guys are calling? Stop the bidding war.",
        icon: "users",
    },
    {
        title: "Missed Calls = Lost Cash",
        description:
            "60% of leads go to the first to answer. Our AI books them instantly.",
        icon: "phone-missed",
    },
];

const solutions = [
    {
        title: "Local SEO Domination",
        description:
            "Rank #1 for 'Emergency AC Repair' and 'Furnace Installation' in your specific service zones.",
        icon: "map-pin",
    },
    {
        title: "24/7 AI Booking Agent",
        description:
            "Capture leads instantly via SMS and web chat, even at 2 AM on a Sunday.",
        icon: "bot",
    },
    {
        title: "Review Automation",
        description:
            "Automatically request and showcase 5-star reviews after every completed service call.",
        icon: "star",
    },
    {
        title: "Seasonal Campaigns",
        description:
            "Pre-built, automated campaigns to fill your schedule with tune-ups before the rush hits.",
        icon: "calendar-clock",
    },
];
---

<Layout
    title={`${industry.name} Marketing - Skyabove`}
    description={industry.description}
>
    <Navigation />

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-bg-overlay"></div>
        <div class="container relative z-10">
            <div class="hero-content">
                <span class="hero-label">Exclusively for HVAC Contractors</span>
                <h1 class="page-title">
                    Dominate Your Local <span class="gradient-text"
                        >HVAC Market</span
                    >
                </h1>
                <p class="page-subtitle">{industry.subtitle}</p>
                <div class="cta-wrapper">
                    <a href="/#contact" class="btn btn-primary"
                        >Claim Your Territory</a
                    >
                    <span class="cta-note"
                        >Strict exclusivity: We only partner with one pro per
                        service area.</span
                    >
                </div>
            </div>
        </div>
    </section>

    <!-- The Trap (Problem) Section -->
    <section class="problem-section">
        <div class="container">
            <div class="section-header text-center">
                <h2 class="section-title">The "Old Way" is Broken</h2>
                <p class="section-desc">
                    Why relying on aggregators and word-of-mouth creates an
                    unstable business.
                </p>
            </div>
            <div class="pain-points-grid">
                {
                    painPoints.map((point) => (
                        <div class="pain-card">
                            <div class="pain-icon-wrapper">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class={`lucide lucide-${point.icon}`}
                                >
                                    <path d="M12 12h.01" />
                                </svg>
                            </div>
                            <h3>{point.title}</h3>
                            <p>{point.description}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- The Solution Section -->
    <section class="solution-section">
        <div class="container">
            <div class="section-header text-center">
                <span class="section-label">The Skyabove System</span>
                <h2 class="section-title">
                    Built for High-Ticket Installs & Service Contracts
                </h2>
            </div>

            <div class="solutions-grid">
                {
                    solutions.map((solution) => (
                        <div class="solution-card">
                            <div class="solution-icon">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="lucide-check-circle"
                                >
                                    <>
                                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                                        <polyline points="22 4 12 14.01 9 11.01" />
                                    </>
                                </svg>
                            </div>
                            <div class="solution-content">
                                <h3>{solution.title}</h3>
                                <p>{solution.description}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <IndustryTabs />

    <section class="final-cta">
        <div class="container">
            <div class="cta-box">
                <h2>Ready to Own Your Market?</h2>
                <p>
                    Don't let another season pass by waiting for the phone to
                    ring.
                </p>
                <a href="/#contact" class="btn btn-primary btn-large"
                    >Schedule Your Strategy Call</a
                >
            </div>
        </div>
    </section>

    <Footer />
</Layout>

<style>
    /* Hero Section */
    .hero-section {
        position: relative;
        padding: 12rem 0 8rem;
        text-align: center;
        background: url("/images/hvac-hero-tech.png") no-repeat center
            center/cover;
        overflow: hidden;
    }

    .hero-bg-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(15, 23, 42, 0.8), #0f172a);
        z-index: 1;
    }

    .relative {
        position: relative;
    }
    .z-10 {
        z-index: 10;
    }

    .hero-label {
        display: inline-block;
        background: rgba(99, 102, 241, 0.15);
        color: var(--primary-light);
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        border: 1px solid rgba(99, 102, 241, 0.3);
    }

    .page-title {
        font-size: clamp(2.5rem, 5vw, 4.5rem);
        font-weight: 900;
        margin-bottom: 1.5rem;
        line-height: 1.1;
        color: white;
    }

    .gradient-text {
        background: var(--gradient-1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .page-subtitle {
        font-size: 1.25rem;
        color: #cbd5e1;
        max-width: 800px;
        margin: 0 auto 3rem;
        line-height: 1.7;
    }

    .cta-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .cta-note {
        font-size: 0.85rem;
        color: #94a3b8;
        font-style: italic;
    }

    .btn {
        display: inline-block;
        padding: 1rem 2.5rem;
        border-radius: 0.5rem;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 1.1rem;
    }

    .btn-primary {
        background: var(--gradient-1);
        color: white;
        box-shadow: 0 4px 20px rgba(99, 102, 241, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(99, 102, 241, 0.5);
    }

    /* Problem Section */
    .problem-section {
        padding: 6rem 0;
        background: #0f172a;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1rem;
    }

    .section-desc {
        font-size: 1.1rem;
        color: #94a3b8;
        max-width: 600px;
        margin: 0 auto 4rem;
    }

    .pain-points-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .pain-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border-radius: 1rem;
        transition: transform 0.3s ease;
    }

    .pain-card:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.05);
    }

    .pain-icon-wrapper {
        width: 50px;
        height: 50px;
        background: rgba(239, 68, 68, 0.1); /* Red tint for pain */
        color: #f87171;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .pain-card h3 {
        color: white;
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
    }

    .pain-card p {
        color: #94a3b8;
        line-height: 1.6;
    }

    /* Solution Section */
    .solution-section {
        padding: 6rem 0;
        background: #1e293b;
    }

    .solutions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        margin-top: 4rem;
    }

    .solution-card {
        display: flex;
        gap: 1.5rem;
        padding: 2rem;
        background: rgba(15, 23, 42, 0.5);
        border-radius: 1rem;
        border: 1px solid rgba(99, 102, 241, 0.2);
    }

    .solution-icon {
        flex-shrink: 0;
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .solution-content h3 {
        color: white;
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        font-weight: 700;
    }

    .solution-content p {
        color: #cbd5e1;
        line-height: 1.6;
    }

    /* Final CTA */
    .final-cta {
        padding: 6rem 0;
        background: #0f172a;
    }

    .cta-box {
        background: radial-gradient(circle at center, #1e1b4b 0%, #0f172a 100%);
        border: 1px solid var(--primary-color);
        padding: 4rem 2rem;
        border-radius: 2rem;
        text-align: center;
    }

    .cta-box h2 {
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1rem;
    }

    .cta-box p {
        font-size: 1.2rem;
        color: #cbd5e1;
        margin-bottom: 2.5rem;
    }

    .text-center {
        text-align: center;
    }
</style>
